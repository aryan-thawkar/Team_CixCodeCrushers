<body>
    <h1>DSA Practice</h1>
    <div class="question-box" id="questionBox"></div>
    <div class="editor-box">
        <textarea id="codeEditor" placeholder="Write your JavaScript solution here..."></textarea>
        <button onclick="runCode()">Run Code</button>
        <button onclick="nextQuestion()">Next Question</button>
        <pre id="output"></pre>
    </div>

    <script>
        const questions = [
            "Write a function to check if a number is prime.",
            "Write a function to reverse a string.",
            "Write a function to find the factorial of a number.",
            "Write a function to check if a string is a palindrome."
        ];
        let index = 0;

        function loadQuestion() {
            document.getElementById('questionBox').innerText = questions[index];
        }
        function runCode() {
    const code = document.getElementById('codeEditor').value;
    try {
        let result = eval(`(function() { ${code} })()`);
        document.getElementById('output').innerText = 'Output: ' + (result !== undefined ? result : 'No output');
    } catch (e) {
        document.getElementById('output').innerText = 'Error: ' + e.message;
    }
}


        function nextQuestion() {
            index = (index + 1) % questions.length;
            loadQuestion();
            document.getElementById('codeEditor').value = '';
            document.getElementById('output').innerText = '';
        }
        window.onload = loadQuestion;
    </script>
</body>
</html>
